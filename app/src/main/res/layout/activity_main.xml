<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/empurple"
            app:titleTextColor="@color/white"
            />

        <TextView
            android:id="@+id/dostawca"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightextview"
            android:layout_marginTop="10dp"
            android:text="Textview"
            />

        <TextView
            android:id="@+id/szerokosc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightextview"
            />
        <TextView
            android:id="@+id/dlugosc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightextview"
            android:text="Textview"
            />

        <TextView
            android:id="@+id/text_network"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightextview"
            />
        <TextView
            android:id="@+id/text_gps"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightextview"
            />

        <org.osmdroid.views.MapView
            android:id="@+id/osm"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            />

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/archival_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Textview"
                />
        </ScrollView>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>